{
  "globals": {
    "apAEM": true,
    "analytics": true,
    "cookie": true,
    "Handlebars": true,
    "jQuery": true,
    "objectFitImages": true,
    "_satellite": true,
    "YT": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "rules": {
    "array-bracket-spacing": [1, "never"],
    "block-scoped-var": 1,
    "brace-style": [1, "1tbs"],
    "camelcase": 1,
    "comma-dangle": [1, "never"],
    "computed-property-spacing": [1, "never"],
    "default-case": 1,
    "dot-notation": 1,
    "eol-last": [1, "unix"],
    "eqeqeq": [1, "always"],
    "indent": ["warn", 2, { "SwitchCase": 1, "VariableDeclarator": 2 }],
    "linebreak-style": [1, "unix"],
    "max-depth": [1, 3],
    "max-len": [1, 120],
    "max-statements": [1, 30],
    "new-cap": 1,
    "no-delete-var": 1,
    "no-eval": 1,
    "no-extend-native": 1,
    "no-lonely-if": 1,
    "no-mixed-spaces-and-tabs": [1, "smart-tabs"],
    "no-shadow-restricted-names": 1,
    "no-spaced-func": 1,
    "no-trailing-spaces": 1,
    "no-unneeded-ternary": 1,
    "no-unreachable": 1,
    "no-unused-vars": 1,
    "no-use-before-define": [1, { "functions": false, "classes": true }],
    "no-whitespace-before-property": 1,
    "object-curly-spacing": [1, "always"],
    "one-var-declaration-per-line": 1,
    "quotes": [1, "single", "avoid-escape"],
    "space-unary-ops": 1,
    "strict": 2,
    "vars-on-top": 1,
    "valid-typeof": 1,
    "wrap-iife": [1, "any"]
  }
}
